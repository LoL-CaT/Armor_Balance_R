{building
  	(include "/properties/construction.inc")
	{Extension "tower_water.mdl"}
	{obstacleID "small_building"}
	{props "steel" "big" "parts" "construction" "water_capacity" "tower_metal"}
	("armor_use_volume_thickness")

	{Volume "body"
		{Thickness 7}
		{able {visible 0}{bullet 0}}
		{tags "body"}
	}
	{Volume "body1"
		{Thickness 7}
		{tags "body" "water"}
		{able {visible 0}}
	}
	{Volume "place7"
		{Tags  "attach" "7"}
		{able clear {bullet 0}{touch 1}}
	}
	{Volume "place6"
		{Tags  "attach" "6"}
		{able clear {bullet 0}{touch 1}}
	}
	{Volume "place5"
		{Tags  "attach" "5"}
		{able clear {bullet 0}{touch 1}}
