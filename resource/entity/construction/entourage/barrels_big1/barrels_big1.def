{game_entity
	(include "/properties/construction.inc")
	{Extension "barrels_big1.mdl"}
	("armor_use_volume_thickness")
	{props "construction"  "steel" "one" "staged"}
  	{ObstacleID "unbreakable"}


	{placer
		{place "1" {attach squat_lie} {linkbone "node01"}}
		{place "2" {attach squat_lie} {linkbone "node02"}}
		{place "3" {attach squat_lie} {linkbone "node03"}}
	}

	{boarder
		{door "door01" {queue 0}}

		{node "ladder_bottom01"}
		{node "ladder_top01"}
		{node "node01"}
		{node "node02"}
		{node "node03"}

		{anm "ladder_bind"
			{forward	{begin	"stand_climb_stairs"}}
			{reverse	{end	"stand_climb_stairs" -1}}
		}
		{anm "ladder"
			{forward	{speed 2} {loop "stand_upstairs"}}
			{reverse	{speed 2} {loop "stand_upstairs" -1}}
		}
		{anm "walk"
			{forward {speed 3}}
			{reverse {speed 3}}
		}

		{link "door01" "ladder_bottom01" {anm "ladder_bind"} {forward putoff} {reverse puton}}
		{link "ladder_bottom01" "ladder_top01" {anm "ladder"}}
		{link "ladder_top01" "1" {anm "walk"}}
    	{link "1"	"2"	{anm "walk"}}
    	{link "2"	"3"	{anm "walk"}}
    	{link "3"	"4"	{anm "walk"}}
    	{link "1"	"3"	{anm "walk"}}
    	{link "1"	"4"	{anm "walk"}}
	}
	{volume "attach01"
		{able clear {touch 1} }
		{tags "attach" "1"}
	}
	{volume "attach02"
		{able clear {touch 1} }
		{tags "attach" "2"}
	}
	{volume "attach03"
		{able clear  {touch 1} }
		{tags "attach" "3"}
	}
	{Volume "body"
		{thickness	10}
		{tags "body"}

	}
}
