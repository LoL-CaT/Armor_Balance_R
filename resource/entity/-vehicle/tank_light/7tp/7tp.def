	}

	
	{extender "inventory"
		{box
			{item "bullet37_bofors ap" 50}
			{item "bullet37_bofors fg" 30}
			{item "ammo mgun" 3960}			
		}
	}
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "37mm_bofors" filling "bullet37_bofors ap" 1}
			{charger "commander"}
			("abm_low")    
		}
		{place "mgun2"
			{type "mgun_coaxial"}
			{foresight "foresight5"}
			{weapon "ckm_wz30" filled}
			{charger "gunner"}
			("abm_mgun")
			{basic}
		}
	}
	
	
	{mass 9400}
		{Chassis
		("tank_trace" fx("tracks_sm2") step(0.15) len(0.6))
