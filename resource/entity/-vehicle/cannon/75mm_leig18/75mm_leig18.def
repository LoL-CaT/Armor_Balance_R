		}
		{anm "seat2"
			{forward {end "pose_seat_cannon1_right" 10}}
		}
	}

	{extender "inventory"
		{box
			{item "bullet75_leig18 fg" 40}
;			{item "bullet75_leig18 heat" 40}
		    {item "sandbag_kit2" 25}
;           {item "plant" 5}
		}
	}
