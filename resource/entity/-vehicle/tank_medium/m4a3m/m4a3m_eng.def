	{collider "tank.medium"}
	{props "medium" "mine_exploder" "vision_vehicle_medium"}
	{targetSelector "tank_bullet"}
	{targetClass "tank" "bullet"}
	
	{extender "enumerator"}

	("armor_medium"  turret(0) body(51 38 38 25) body2(51 38 38 25))
	("armor_engine"  t(25 25 25 25))		
	("shield" args 10)
	
	{volume "body1"
		{component "body"}
		{tags "body"}
	}
	{volume "body2"
		{component "body"}
		{tags "body"}
	}
	{volume "body3"
		{component "body"}
		{thickness 81}
		{tags "body"}
	}
	{volume "engine"
		{component "engine"}
		{tags "engine"}
	}
	{volume "support1"
		{thickness 15}
	}
	{volume "support"
		{thickness 15}
	}
	{volume "mgun_shield1"
		{thickness 15}
	}
	{volume "mgun_shield2"
		{thickness 15}
	}
	{volume "wheel"
		{thickness 1500}
		{density 0.1}
	}
	{volume "Wheel_work"
		{thickness 150}
		{density 0.1}
	}

	{boarder
		{anm "left"
			{forward	{begin	"board_HighArmor"} {end "seat_gunner_stand"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "right"
			{forward	{begin	"board_HighArmor"} {end "seat_gunner_stand"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "armor"
			{forward	{begin	"board_HighArmor"} 	{end "pose_seat_armor_1"}}
			{reverse 	{end	"emit_tank_2"}}
		}
		{anm "armor1"
			{forward	{begin	"board_HighArmor"} {end "pose_seat_armor_1"}}
			{reverse 	{end	"emit_body"}}
		}
	}

	("crew_human" place(driver)	door1(emit1) door2(emit2) visor(driver))
;	("gunner_visible")

	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor1))
	("seat_human" place(seat2) bone(seat02) door(emit4)  animation(armor))
	("seat_human" place(seat3) bone(seat03) door(emit5)  animation(armor))
	("seat_human" place(seat4) bone(seat04) door(emit6)  animation(armor1))

	{extender "inventory"
		{weapon "mgun"
			{mask "weapon mgun"}
		}
		{box
			{item "ammo mgun" 1500}
			{item "browning_m19" filled {user "mgun"}}
		}
	}
	{Weaponry
		{place "mgun"
			{gunner "gunner2"}
			{charger "gunner2"}
			{LinkBone "mgun_rot"}
			{LinkAnimation "off"}
			("abm_mgun")
		}
	}

	{mass 25500}	
	{Chassis
		("tank_trace" fx("tracks_sm") step(0.3) len(0.16))
		("mobility"
			speed(48)
			weight(25.5)
			power(450)
			fuel(635)		
		)
	}

	{Extension "m4a3m.mdl"}

	{bone "turret_mgun"
		{limits -30 30}
	}
