	{collider "tank.medium"}
	{props "l_medium" "-turret" "opened" "vision_vehicle_low" "muzzle_medium"}

	{extender "enumerator"
		{digit_folder "ger"}
	}
	
	{volume "sticky"
		{tags "grenade_fg_target"}
		{able clear {contact} {touch}}
		{component "sticky_body"}
	}
	{component "sticky_body"}

	{volume "body1"
		{component "body"}
