        {targetSelector "tank_flak"}

	{volume "sticky"
		{tags "grenade_fg_target"}
		{able clear {contact} {touch}}
		{component "sticky_body"}
	}	
	{component "sticky_body"}
	{volume "body1"
		{tags "body"}
		{component "body"}
		{thickness 30}
	}
	{volume "body2"
		{tags "body"}
