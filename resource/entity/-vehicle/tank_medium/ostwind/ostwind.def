		{thickness 30}
	}

	("armor_medium" turret(20 20 20 15) body(80 30 30 15))
	("wheels_armor" args 5)	
	("armor_engine"  t(15 15 15 15))
	
	(define "crew_human"
		{placer
			{place "%place" {group "crew"} {linkbone "%place"} {turnoff {sensor} {shadow}} {openForCrush}}
		}
		{boarder
			{door "%door1"}
			{door "%door2"}
			{link "%door1" "%place" {anm "%place"} {forward putoff} {reverse puton}}
			{link "%door2" "%place" {anm "%place"} {forward putoff} {reverse puton}}
			
		}
	)
	
	{placer
		{place "driver" {visor "driver"}}
		{place "commander" {visor "main"}}
		{place "gunner" {visor "main"}}
		{place "charger" {visor "main"}}
		{place "charger2" {visor "main"}}		
	}	
	
	{boarder
		{door "emit0"}
;		{door "emit1"}
		{link "emit0" "driver" {anm "driver"} {forward putoff} {reverse puton}}
		{link "emit0" "charger2" {anm "driver"} {forward putoff} {reverse puton}}		
;		{link "emit1" "commander" {anm "driver"} {forward putoff} {reverse puton}}
	}

	("crew_human" place(gunner)	    door1(emit2))
	("crew_human" place(charger)	door1(emit3))
	("crew_human" place(commander)	door1(emit3))
	
	{boarder
		{anm "driver"
			{forward	{begin	"board_pz4_driver"} {end "seat_gunner_stand"} {base "open_driver"}}
			{reverse 	{end	"board_pz4_driver" -1} {base "open_driver" -1}}
		}
		{anm "charger"
			{forward	{begin	"board_tank_left"} {end "pose_seat_armor_2"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "charger2"
			{forward	{begin	"board_pz4_driver"} {end "seat_gunner_stand"} {base "open_driver"}}
			{reverse 	{end	"board_pz4_driver" -1} {base "open_driver" -1}}
		}		
		{anm "commander"
			{forward	{begin	"board_tank_left"} {end "pose_seat_armor_2"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "gunner"
			{forward	{begin	"board_tank_right"} {end "pose_gunner_ostwind"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "armor"
			{forward	{begin	"board_highArmor"} 	{end "pose_seat_armor_1"}}
			{reverse 	{end	"emit_tank_2"}}
		}
		{anm "armor1"
			{forward	{begin	"board_lowArmor"} {end "pose_seat_armor_2"}}
			{reverse 	{end	"emit_body"}}
		}
		{anm "armor2"
			{forward	{begin	"board_lowArmor"} {end "pose_seat_armor_1"}}
			{reverse 	{end	"emit_body"}}
		}
	}
	
	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor))
	("seat_human" place(seat2) bone(seat02) door(emit4)  animation(armor1))
	("seat_human" place(seat3) bone(seat03) door(emit5)  animation(armor2))
	("seat_human" place(seat4) bone(seat04) door(emit6)  animation(armor1))

    {sensor
	        {visor "tur2_4"
			{vision "tank_pr"}
			{bone "visor14"}
		}	
	}	
	
	{extender "inventory"
		{box
			{item "bullet37_flak36 zenite" 500}
			{item "bullet37_flak36 ap" 500}
			{item "bullet37_flak36 fg" 500}
			{item "bullet37_flak36 apcr" 10}
			{item  "ammo mgun" 1350}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "37mm_flak43" filling "bullet37_flak36 zenite" 8}
			{charger "gunner"}	
			("abm_zenite")				
		}
		{place "mgun1"
			{type "mgun_hull"}
			{weapon "mg34tank" filled}
			{foresight "foresight4"}
			{gunner "commander"}
			{charger "commander"}
			("abm_mgun")
			{basic}
		}
	}
	

	{mass 22000}
	{Chassis
		("tank_trace" fx("tracks_mid") step(0.52) len(0.7))
