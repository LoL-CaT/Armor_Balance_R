{entity
	(include "/properties/car.ext")
    (include "/properties/l_car_mobility.ext")	
	(include "/properties/selection/vehicle.inc"  scale(1.1))
	{props "vehicle" "car" "wheeled" "turn_over" "vision_vehicle_minimum"}
	{targetClass "car" "fg bullet"}	
;	{targetSelector "tank_bullet_h_flak"}
	{PatherId "vehicle.small"}
	("armor_light" args 1.2)
	
	{extender "enumerator"}

	{Volume "body"
		{tags "body"}
		{component "body"}
		{thickness 7}
	}
	{Volume "body2"
		{tags "body"}
		{component "body"}
		{thickness 7}
	}
	
	("shield" args 8)
	{extender "shield"
		{on}
	}
	
	{component "shield1" {tags "shield"}}
	{component "shield2" {tags "shield"}}
	{component "shield3" {tags "shield"}}
	{component "shield4" {tags "shield"}}

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")

	{placer
		{place "driver"		{group "driver"} {visor "driver"}}
		{place "gunner"		{group "driver"} {visor "main"} {turnoff {targetable 0}}}
	}

	("board_animation" place(driver) board_begin(board_willis_driver) board_end(seat_Willis_driver) base(doorleft))
	{boarder
		{anm "gunner"
			{forward {begin "board_LowTank_stand"} {end "seat_Willis_driver"}}
			{reverse {end "emit_tank_1_hold" 1}}
		}
	}
	("crew_human" place(driver)	bone(driver) door(emit1) animation(driver))
	("crew_human" place(gunner)	bone(gunner) door(emit2) animation(gunner))
	{sensor
		{visor "driver"
			{bone "visor2"}
			{vision "moto_crew"}
		}
		{visor "main"
			{bone "visor"}
			{vision "vehicle_top_mgun"}
		}
	}

	
	{extender "inventory"
		{Box
			{size 6 6}
			{item  "ammo hmgun" 500}
;           {item "browning" filled {user "mgun"}}
		}
	}
	{Weaponry
		{place "mgun"
			{type "mgun_main"}
			{weapon "browning" filled}
			{charger "gunner"}
			{LinkBone "mgun"}
			{LinkAnimation "off"}
			("abm_mgun")
		}
	}
	
	{mass 1100}
	
	{Chassis
		("car_trace" fx("tracewheel01a") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel01a") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility"
			speed(105)
			weight(1.1)
			power(60)
			fuel(57)	
		)
	}
	
	{Extension "willys50.mdl"}

	{bone "mgun_turret"
		{speed 0.03}
	}
}
