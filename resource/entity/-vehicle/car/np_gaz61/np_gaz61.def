{entity
	(include "/properties/car.ext")
    (include "/properties/l_car_mobility.ext")		
	(include "/properties/selection/vehicle.inc"  scale(1.1))
	{props "vehicle" "car" "wheeled" "turn_over" "vision_vehicle_low"}
	{PatherId "vehicle.small"}
	{targetClass "car" "fg bullet"}	
	("armor_medium" args 1.0)

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")

	("crew_3_human")
	("crew_human" place(seat1)	bone(Seat01)	door(emit3)	animation(passenger1))
	("crew_human" place(seat2)	bone(Seat02)	door(emit4)	animation(passenger2))

	{boarder
		{anm "driver"
			{forward	{begin	"board_gaz-m_driver"} {end "seat_driver_car"} {base "doorleft"}}
			{reverse 	{end	"board_gaz-m_driver" -1} {base "doorleft" -1}}
		}
	}

	{boarder
		{anm "commander"
			{forward	{begin	"board_gaz-m"} {end "seat_passenger"} {base "doorright"}}
			{reverse 	{end	"board_gaz-m" -1} {base "doorright" -1}}
		}
	}

	{boarder
		{anm "passenger2"
			{forward	{begin	"board_gaz-m"} {end "seat_passenger"} {base "doorright2"}}
			{reverse 	{end	"board_gaz-m" -1} {base "doorright2" -1}}
		}
	}

	{boarder
		{anm "passenger1"
			{forward	{begin	"board_gaz-m_driver"} {end "seat_passenger"} {base "doorleft2"}}
			{reverse 	{end	"board_gaz-m_driver" -1} {base "doorleft2" -1}}
		}
	}


	{placer
		{place "driver"	{group "crew"}}
		{place "commander"	{group "crew"}}
	}

	{extender "inventory"
		{Box
			{size 6 6}
		}
	}
	
	{mass 1600}
	
	{Chassis
		("car_trace" fx("tracewheel04") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel04") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility"
			speed(105)
			weight(1.6)
			power(85)
			fuel(60)	
		)
	}
	
	{Extension "gaz61.mdl"}
	{Volume "Body"
		{tags "body"}
		{component "body"}
		{thickness 7}
	}
	(mod "mp"
	  	{texmod "2"}
	)

}
