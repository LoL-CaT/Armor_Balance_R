{extender "vitality"
	{Health
		{max 		100}	; max health
		{current 	100}	; current health
		{inc 		0.1}	; health regeneration per second
	}
	{Stamina
		{max 		200}	; max stamina
		{current 	200}	; current stamina
		{inc				; stamina regeneration/usage per second (depending on movement mode and load)		
			; movement_mode		load[0]		load[1]		load[2]		load[3]
			;--------------------------------------------------------------
			{stay 				+15			+10			+9			+5 }	
			{walk 				+10			+5			0			-10}
			{slow 				+10			+5			0			-10}
			{normal				+2.5		+1			0			-20}
			{fast 				-5			-10 		-20			-40}
		}
		{load 		0		20		40		100} 	; equipment weight (in kg)
		{movement_limits
			{Fast 		1		25}
			{Normal 	0		0 }
			{Slow 		-1		-1}
		}
	}
}

