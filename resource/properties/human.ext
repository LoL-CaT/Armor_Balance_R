{brain "human"
	{const "bomb/detect_explosives" 8}		;detect explosives inside 7 meter radius
	{const "bomb/detect_grenades" 	7}		;detect grenades inside 5 meter radius
	{const "bomb/danger_zone_run" 	2}		;run away if danger is inside 0 - 2 meter radius
	{const "bomb/danger_zone_jump" 	4}			;jump away if danger is inside 2 - 4 meter radius
	{const "bomb/danger_zone_hide" 	7}		;hide if danger is inside 4 - 6 meter radius
	{const "fight/distance"			1.5}
}

(define "accuracy_by_motion" ;  spreading depending on the speed of "body", "gun" volumes
	{AccuracyByMotion
		{MaxLinearSpeed %max_linear}               ;km/h
		{ByLinearSpeed %accuracy_by_linear}
		{MaxAngularSpeed %max_angular}             ;deg/s
		{ByAngularSpeed %accuracy_by_angular}
		{DisorderTime %disorder_time}              ;s
		{OrderTime %order_time}                    ;s
	}
)

{Weaponry
	{place "hand_right"
		{Rotate}
		{SequentialAim 0}
		{LinkBone "right_hand"}
		{LinkAnimation "on"}
		("accuracy_by_motion"
			max_linear(10.00) accuracy_by_linear(0.75)
			max_angular(15.00) accuracy_by_angular(0.80)
			disorder_time(1.00) order_time(0.10)
		)
	}
	{ManualAccuracy 1.5}
}

{extender "talk"
	{talker "human"}
}

